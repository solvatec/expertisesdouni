<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- inherit partner form view -->
        <record id="view_res_partner_sites_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.site.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='contact_addresses']" position="after"> 
                    <page string="Sites" name="partner_sites" attrs="{'invisible': [('is_company', '=', False)]}">
                        <field name="partner_site_ids"/>
                    </page>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>