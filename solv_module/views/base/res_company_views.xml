<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <!-- inherit partner form view -->
        <record id="view_res_company_form_inherit" model="ir.ui.view">
            <field name="name">res.company.form.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="before"> 
                    <field name="ice" string="Ice"/>
                    <field name="rc"/>
                    <field name="cnss"/>
                    <field name="if_company"/>
                    <field name="patente"/>
                    <field name="capital"/>
                    <field name="fax"/>
                </xpath>
                <xpath expr="//field[@name='vat']" position="replace"> 
                    <field name="vat" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='company_registry']" position="replace"> 
                    <field name="company_registry" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='company_registry']" position="replace"> 
                    <field name="company_registry" invisible="1"/>
                </xpath>
            </field>
        </record>

