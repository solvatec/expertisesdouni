<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <!-- inherit partner form view -->
        <record id="view_res_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group[1]" position="after">
                    <group string="Info">
                        <group>
                            <field name="ref" string="Référence"/>
                            <field name="industry_id" string="Secteur d'activité"/>
                            <field name="team_id" string="Commercial"/>
                            <field name="nbr_employee" attrs="{'invisible': [('company_type', '=', 'person')]}"/>
                            <!-- <field name="partner_type"/> -->
                            <field name="partner_type_id" attrs="{'invisible': [('company_type', '=', 'person')]}"/>
                        </group>
                        <group>
                            <field t-if="'company_type' != 'person'" name="vat" string ="ICE" attrs="{'invisible': [('company_type', '=', 'person')]}"/>
                            <field name="rc" attrs="{'invisible': [('company_type', '=', 'person')]}"/>
                            <field name="cnss" attrs="{'invisible': [('company_type', '=', 'person')]}"/>
                            <field name="if_partner" attrs="{'invisible': [('company_type', '=', 'person')]}"/>
                            <!-- <field name="patente" attrs="{'invisible': [('company_type', '=', 'person')]}"/>
                            <field name="capital" attrs="{'invisible': [('company_type', '=', 'person')]}"/> -->
                        </group>
                    </group>
                </xpath>
                <xpath expr="//group/group/field[@name='vat']" position="replace"> 
                    <field name="vat" placeholder="e.g. BE0477472701" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='phone']" position="after"> 
                    <field name="fax"/>
                </xpath>
                <xpath expr="//field[@name='parent_id']" position="replace"> 
                    <field name="parent_id" widget="res_partner_many2one" placeholder="Group / Société" domain="[('is_company', '=', True)]" context="{'default_is_company': True, 'show_vat': True}" attrs="{'invisible': ['|', '&amp;', ('is_company','=', False),('parent_id', '=', False),('company_name', '!=', False),('company_name', '!=', '')]}"/>
                    <field name="parent_id" widget="res_partner_many2one" placeholder="Société" domain="[('is_company', '=', True)]" context="{'default_is_company': True, 'show_vat': True}" attrs="{'invisible': ['|', '&amp;', ('is_company','=', True),('parent_id', '=', False),('company_name', '!=', False),('company_name', '!=', '')]}"/>                   
                </xpath>
            </field>
        </record>

        <!-- form view inherited to make phone required filed -->
